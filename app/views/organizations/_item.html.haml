- content_tag_for(:tr, organization, :class => cycle(:odd, :even)) do
  %td.name= h organization.try(:name)
  %td.owner_user_id= h organization.try(:owner_user_id)
  %td.industry= h organization.try(:industry)
  %td.specific_industry= h organization.try(:specific_industry)
  %td.actions
    = link_to 'Show', organization_path(organization)
    |
    = link_to 'Edit', edit_organization_path(organization)
    |
    = link_to 'Destroy', organization, :confirm => 'Are you sure?', :method => :delete