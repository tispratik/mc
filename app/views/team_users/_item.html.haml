- content_tag_for(:tr, team_user, :class => cycle(:odd, :even)) do
  %td.team_id= h team_user.try(:team_id)
  %td.user_id= h team_user.try(:user_id)
  %td.actions
    = link_to 'Show', team_user_path(team_user)
    |
    = link_to 'Edit', edit_team_user_path(team_user)
    |
    = link_to 'Destroy', team_user, :confirm => 'Are you sure?', :method => :delete